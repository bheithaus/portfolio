@import 'nib'
header_height = 55px

.navbar
    min-height 100px
    margin-bottom 0
    border-radius 0

    .container-fluid
        margin-top 25px
        font-size 18px
        padding 0 30px

    .navbar-brand
        font-size 24px
        margin-right 20px

.card
  border-radius 3px
  margin 0
  padding 0 10px
  background rgba(255,255,255,0.9)
  color #303030

  .card-header
    border-bottom solid 1px white
    padding 5px 20px 0 20px

  .card-body
    margin-top 20px
    padding 0 40px

html
  height 100%

.background
  background linear-gradient(top, white, black)
  position fixed
  left 0
  right 0
  top header_height
  bottom 0
  z-index 1

.content
  z-index 2

  &:before
    background-image url('/images/flowers.jpg')
    background-size cover
    background-repeat no-repeat
    content ""
    position fixed
    opacity 0.6
    left 0
    right 0
    top 0
    bottom 0
    z-index -1

    display block
    -webkit-filter blur(0.5px)

.

// All Animations on Divs
div
  transition all 1s ease-in;


// Buttons //
.btn
  .fa.margin-left
    margin-left 10px


//  SKILLS  //
.skills
  @extend .card
  
  text-align: center
  
  .category
    .title
      margin-bottom 40px

.skill-outer
  width 190px
  display inline-block
  overflow hidden

.skill-inner
  padding 10px
  border-radius 3px
  text-align center
  height 92px


  h4
    display inline-block

  &:hover
    background hsla(0,0%,0%, 0.3)

  a
    color #303030;

  img
    height 40px
    padding 10px 20px
    background hsla(0,0%,70%, 0.5)
    border-radius 5px
    display block
    margin 0 auto

//  PROJECTS  //
.projects
  .project
    padding 20px

    img
      // width 300px

    li
      font-size 16px

    .btn
      margin 0 5px
